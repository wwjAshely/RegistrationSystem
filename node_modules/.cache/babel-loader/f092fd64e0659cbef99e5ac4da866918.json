{"ast":null,"code":"// 引入组件\nimport Student from './components/Student';\nimport School from './components/School';\nexport default {\n  name: 'App',\n  components: {\n    School,\n    Student\n  },\n\n  data() {\n    return {\n      msg: '你好啊！',\n      StudentName: ''\n    };\n  },\n\n  methods: {\n    getSchoolName(name) {\n      console.log('App收到了学校名：', name);\n    },\n\n    getStudentName(name, ...params) {\n      console.log('App收到了学生名：', name, params);\n      this.StudentName = name;\n    },\n\n    m1() {\n      console.log('demo事件被触发了');\n    }\n\n  },\n\n  mounted() {\n    this.$refs.student.$on('atguigu', this.getStudentName); //     setTimeout(() => {\n    // this.$refs.student.$on('atguigu',this.getStudentName)\n    //         // 只能点一次写法\n    //         // this.$refs.student.$once('atguigu',this.getStudentName)\n    //     }, 3000);\n  }\n\n};","map":{"version":3,"mappings":"AAwBA;AACA;AACA;AAEA;EACAA,WADA;EAEAC;IACAC,MADA;IAEAC;EAFA,CAFA;;EAMAC;IACA;MACAC,WADA;MAEAC;IAFA;EAIA,CAXA;;EAYAC;IACAC;MACAC;IACA,CAHA;;IAIAC;MACAD;MACA;IACA,CAPA;;IAQAE;MACAF;IACA;;EAVA,CAZA;;EAwBAG;IACA,uDADA,CAEA;IACA;IACA;IACA;IACA;EACA;;AA/BA","names":["name","components","School","Student","data","msg","StudentName","methods","getSchoolName","console","getStudentName","m1","mounted"],"sourceRoot":"src","sources":["App.vue"],"sourcesContent":["<template>\n    <!-- 组件的结构 -->\n    <div class=\"app\">\n       <h1>{{msg}}，学生姓名是</h1>\n       <School :getSchoolName='getSchoolName'/>\n\n       <!-- 给 Student组件身上的实例对象VC绑定一个 atguigu 这个事件 \n            通过父组件给子组件绑定一个自定义事件实现：子给父传递数据（第一种写法，使用@或v-on）\n       -->\n        <!-- <Student @atguigu='getStudentName' @demo=\"m1\"/> -->\n       <!-- <Student v-on:atguigu='getStudentName'/>\n            只能点一次\n            <Student @atguigu.once='getStudentName'/>\n       -->\n\n       <!-- \n            通过父组件给子组件绑定一个自定义事件实现：子给父传递数据（第二种写法，使用ref）\n            可以实现延时\n        -->\n       <Student ref=\"student\"/>\n    </div>\n</template>\n\n<script>\n    // 引入组件\n    import Student from './components/Student';\n    import School from './components/School';\n\n    export default {\n        name:'App',\n        components:{\n           School,\n           Student\n        },\n        data() {\n            return {\n               msg: '你好啊！',\n               StudentName: ''\n            }\n        },\n        methods: {\n            getSchoolName(name) {\n                console.log('App收到了学校名：',name);\n            },\n            getStudentName(name,...params) {\n                console.log('App收到了学生名：',name,params);\n                this.StudentName = name\n            },\n            m1() {\n                console.log('demo事件被触发了');\n            }\n        },\n        mounted() {\n            this.$refs.student.$on('atguigu',this.getStudentName)\n        //     setTimeout(() => {\n                // this.$refs.student.$on('atguigu',this.getStudentName)\n        //         // 只能点一次写法\n        //         // this.$refs.student.$once('atguigu',this.getStudentName)\n        //     }, 3000);\n        }\n    }\n</script>\n\n<style>\n    .app{\n        background-color: gray;\n        padding: 5px;\n    }\n</style>"]},"metadata":{},"sourceType":"module"}